{{- if eq .chezmoi.os "windows" }}
# productivity.yaml hash: {{ include ".chezmoidata/windows/productivity.yaml" | sha256sum }}

Write-Host "Installing Windows productivity packages via winget..."

if (-not (Get-Command winget -ErrorAction SilentlyContinue)) {
    Write-Host "winget not found, skipping package installation"
    exit 0
}

{{ range .packages.windows.winget -}}
Write-Host "Installing: {{ . }}"
winget install --id {{ . | quote }} --silent --accept-package-agreements --accept-source-agreements
{{ end -}}

Write-Host "Windows productivity packages installed"
{{- end }}
